{
  "name": "taco",
  "private": true,
  "scripts": {
    "build": "esbuild action.ts --bundle --format=cjs --platform=node --legal-comments=none --outfile=action.js && npm run fmt",
    "fmt": "deno fmt action.ts action.js --single-quote --no-semicolons"
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1",
    "indent-string": "^5.0.0",
    "semver": "^7.5.4"
  },
  "devDependencies": {
    "@types/node": "^20.5.9",
    "@types/semver": "^7.5.1",
    "esbuild": "^0.19.2",
    "typescript": "^5.2.2"
  }
}
